<spaceBattle xmlns="spaceBattle.xsd">
  <vars>
    <variable name="shipName" value="myFighter"/>
  </vars>
  <gameRounds>
    <add humanFleet="myFleet" aliensFleet="SampleExternalFleet" duration="1s"/>
  </gameRounds>
  <externalFleets file="d:\externalFleets.config"/>
  <fleets>
    <fleet name="myFleet" color="White">
      <spaceShip name="${shipName}" armor="1">
        <weapons>
          <disruptor/>
          <antiMatterTorpedoes/>
        </weapons>
        <drive>
          <fusionDrive/>
        </drive>
      </spaceShip>
    </fleet>
  </fleets>
</spaceBattle>
 